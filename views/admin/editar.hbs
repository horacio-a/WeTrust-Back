<div class="conteiner-back">
    <a class="back" href="/productos">Back</a>
</div>
<form action="/productos/editar" method="POST" enctype="multipart/form-data" class="formNewProduct">

    <input type="hidden" name="id" value="{{producto.id}}">

    <div class="conteinertitleProduct">
        Informacion General
    </div>
    <div class="conteinerNewProduct">
        <div class="rowNewProduct">
            <div class="columnNewProduct">
                <input type="hidden" name="nameAnterior" value="{{producto.name}}">

                <label>Nombre de Producto</label>
                <input type="text" name="name" autocomplete="off" value="{{producto.name}}">
            </div>
            <div class="columnNewProduct">

                <label>Descripción </label>
                <input type="text" name="description" value="{{producto.description}}">
            </div>
            <div class="columnNewProduct">
                <label>Marca</label>
                <input type="text" name="marca" value="{{producto.marca}}">
            </div>

        </div>
        <div class="rowNewProduct">
            <div class="columnNewProduct">
                <input type="hidden" name="CategoryAnterior" value="{{producto.category}}">
                <label>Categoría</label>
                <select name="category" onchange="ChangeCategory()">
                    <option value="{{producto.category}}">no cambiar</option>
                    <option value="clothing">clothing</option>
                    <option value="shoe">shoe</option>
                    <option value="accessories">accessories</option>
                </select>

            </div>
            <div class="columnNewProduct">
                <label>Subcategoría</label>
                <select name="subcategory">
                    <option value="{{producto.subcategory}}">no cambiar</option>

                    <option value="">-----accessories-------</option>
                    <option value="Anteojos">Anteojos</option>
                    <option value="Bolsos">Bolsos</option>
                    <option value="Ceniceros">Ceniceros</option>
                    <option value="Encendedores">Encendedores</option>
                    <option value="Gorros">Gorros/Gorras</option>
                    <option value="Juguetes">Juguetes</option>

                    <option value="">-----clothing-------</option>
                    <option value="Camperas">Camperas</option>
                    <option value="Hoodies">Hoodies</option>
                    <option value="Pantalones">Pantalones</option>
                    <option value="Remeras">Remeras</option>
                    <option value="Shorts">Shorts</option>
                    <option value="Underwear">Underwear</option>

                    <option value="">-----shoe-------</option>
                    <option value="sneakers">sneakers</option>
                    <option value="Slides">Slides</option>

                </select>
            </div>
            <div class="columnNewProduct">
                <label>Precio</label>
                <input type="number" name="price" value="{{producto.price}}">
            </div>
        </div>
        <div class="rowNewProduct">
            <div class="columnNewProduct">
                <label>stock</label>
                <input type="number" name="stock" value="{{producto.stock}}">
            </div>
            <div class="columnNewProduct">
                <label>ison</label>
                <input type="checkbox" name="ison">
            </div>
            <div class="columnNewProduct">
                <label>foto</label>
                <input type="hidden" name="Previousimg" id="Previousimg" value="{{producto.img}}">

                <input type="file" name="img" id="img" class="fileSelect">
            </div>
        </div>
    </div>

    <div class="mainRopa desactive" id="mainRopa">
        <div class="conteinertitleRopa">
            Talles Ropa
        </div>
        <div class="conteinerNewRopa">
            <div class="rowNewRopa">
